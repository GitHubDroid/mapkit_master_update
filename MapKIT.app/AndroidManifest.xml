<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.promptnet.mobiledev.mapkit"
    android:versionCode="1"
    android:versionName="1.0" >
    
     <!-- permissions -->
  
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
 
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" >
    </supports-screens>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name="com.promptnet.mobiledev.mapkit.Splasher"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.promptnet.mobiledev.mapkit.DashboardActivity">
        	<intent-filter>
                <action android:name="com.promptnet.mobiledev.mapkit.DashboardActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>
        
        <activity android:name="com.promptnet.mobiledev.mapkit.MapKITMapActivity">
        	<intent-filter>
                <action android:name="com.promptnet.mobiledev.mapkit.MapKITMapActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>
        
         <activity android:name="com.promptnet.mobiledev.mapkit.locator.MapKITLocatorActivity">
        	<intent-filter>
                <action android:name="com.promptnet.mobiledev.mapkit.locator.MapKITLocatorActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>
                <activity android:name="com.promptnet.mobiledev.mapkit.track.GPSTrackingActivity">
        	<intent-filter>
                <action android:name="com.promptnet.mobiledev.mapkit.track.GPSTrackingActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>
                
        <activity
    android:name="com.promptnet.mobiledev.mapkit.mapquest.MapQuestSearchQuery"
    android:exported="false">
	    <intent-filter>
	        <action android:name="android.intent.action.SEARCH" />
	        <category android:name="android.intent.category.DEFAULT" />
	    </intent-filter>
	
	    <meta-data
	        android:name="android.app.searchable"
	        android:resource="@xml/searchable" />
	</activity>
	<provider
           android:name="com.promptnet.mobiledev.mapkit.mapquest.SearchSuggestionProvider"
           android:authorities="com.promptnet.osm"
	       android:exported="false">
	</provider>
    
	<activity android:name=".activity.MapKITMapActivity">
	                <meta-data
                android:name="android.app.default_searchable"
                android:value="com.promptnet.mobiledev.mapkit.mapquest.MapQuestSearchQuery" />
	</activity>
        
    </application>

</manifest>
